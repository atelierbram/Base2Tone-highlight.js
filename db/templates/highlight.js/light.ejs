/* <%- scheme %> Light */
/* <%- author %> */
/* https://github.com/atelierbram./Base2Tone-highlight.js/ */

/* <%- scheme %> Comment */
.hljs-comment,
.hljs-quote {
  color: #<%- base["C4"]["hex"] %>;
}

.hljs-keyword,
.hljs-selector-tag,
.hljs-tag,
.hljs-name,
.hljs-regexp,
.hljs-link,
.hljs-name,
.hljs-selector-id,
.hljs-selector-class {
  color: #<%- base["D0"]["hex"] %>;
}

.hljs-number,
.hljs-meta,
.hljs-built_in,
.hljs-builtin-name,
.hljs-literal,
.hljs-type,
.hljs-params,
.hljs-title,
.hljs-section,
.hljs-selector-attr {
  color: #<%- base["B0"]["hex"] %>;
}

.hljs-attribute,
.hljs-string,
.hljs-symbol,
.hljs-bullet,
.hljs-selector-pseudo {
  color: #<%- base["D4"]["hex"] %>;
}

.hljs-variable,
.hljs-template-variable {
  color: #<%- base["D2"]["hex"] %>;
}

.hljs {
  display: block;
  overflow-x: auto;
  background: #<%- base["C7"]["hex"] %>;
  color: #<%- base["C4"]["hex"] %>;
  padding: 0.5em;
}

.hljs-emphasis {
  font-style: italic;
}

.hljs-strong {
  font-weight: bold;
}
